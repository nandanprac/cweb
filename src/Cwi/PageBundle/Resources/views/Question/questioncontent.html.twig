
<h1 class="space">{{ question.subject }}</h1>

<p class="lead">
    {{ question.text }}
</p>

<button type="button" class="btn pbtn-info">{{ question.speciality }}</button>

<div class="row mt20">
    <div class="col-lg-4 col-md-3 col-sm-4 col-xs-7"><p class="greylight">views<span class="shdiv" style="padding: 3px 6px;background-color: #eee;
    margin-left: 10px; color: #999;">{{ question.view_count }}</span></p></div>
    <div class="col-lg-5 col-md-4 col-sm-5 col-xs-9" style="
"><p class="greylight" style="">Bookmarks<span class="shdiv" style="padding: 3px 6px;background-color: #eee;
    margin-left: 10px; color: #999;">{{ question.bookmark_count }}</span></p></div>
    <div class="col-lg-4 col-md-3 col-sm-4 col-xs-7 col-lg-offset-1"><p class="greylight">Share<span class="shdiv" style="padding: 3px 6px;background-color: #eee;
    margin-left: 10px; color: #999;">3</span></p></div>
</div>

<hr>
{% for reply in question.replies %}
    <div class="row mt15">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            <img class="img-responsive img-circle" src="{{ reply.doctor.profile_picture }}" width="50" alt="">
        </div>
        <div class="col-xs-16 col-sm-16 col-md-16 col-lg-16 paddingleftzero shdivsp">
            <p class="greysdark fw6 fs16">{{ reply.doctor.name }}</p>
            <p class="greylight fw6">{{ reply.doctor.speciality }} . Just Now</p>
        </div>
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 paddingleftzero">
            <span class="glyphicon glyphicon-info-sign fs17 greylight floatleft"></span>
            <span class="glyphicon glyphicon-flag fs17 greylight floatright"></span>
        </div>
    </div>


    <p class="fw4 fs16">{{ reply.text }}</p>

    <div class="row mt15">
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
            <span class="glyphicon glyphicon-thumbs-up thumbsup"></span>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-5 col-xs-7" style="border-right: 1px solid #ccc">
            <p class="greydark fw6 fs14">4 Awesome</p>
            <p class="greylight fw4 fs14 mtminus5 mbminus10">Asker feedback</p>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2 col-lg-offset-1 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
            <span class="glyphicon glyphicon-thumbs-up thumbsup"></span>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-5 col-xs-7">
            <p class="greydark fw6 fs14">4 Awesome</p>
            <p class="greylight fw4 fs14 mtminus5 mbminus10">Asker feedback</p>
        </div>
    </div>

    <hr>
{% endfor %}
        {% if question.comments.comments is defined %}
            <div class="well">
                {% for comments in question.comments.comments %}
                    <div class="row">
                        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-3">
                            <img class="img-responsive img-circle" src="images/doctor.jpeg" width="40" alt="">
                        </div>
                        <div class="col-lg-19 col-md-19 col-sm-19 col-xs-18">
                            <h4 class="fw6">BS</h4>
                            <p>{{ comments.text }} </p>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                            <p>Up</p>
                            <p>{{ comments.total_votes }}</p>
                            <p>Down</p>
                        </div>
                        <hr class="comment">
                    </div>
                {% endfor %}
                <div class="row" style="clear:both;">
                    <form role="form" class="mt10">
                        <!--<div class="input-group">
                            <textarea class="form-control custom-control" rows="3" style="resize:none"></textarea>
                            <span class="input-group-addon btn btn-primary">Send</span>
                        </div>-->
                        <div class="input-group">
                            <input type="text" class="form-control" aria-label="Write a comment..." style="border-right: none;">
                            <span class="input-group-addon btn btn-primary" style="background-color: #fff; color:#bbb;font-weight:600; border-left: none;">POST</span>
                        </div>
                    </form>
                </div>
            </div>
        {% else %}
            <div class="row" style="clear:both;">
                <form role="form" class="mt10">
                    <!--<div class="input-group">
                        <textarea class="form-control custom-control" rows="3" style="resize:none"></textarea>
                        <span class="input-group-addon btn btn-primary">Send</span>
                    </div>-->
                    <div class="input-group">
                        <input type="text" class="form-control" aria-label="Write a comment..." style="border-right: none;">
                        <span class="input-group-addon btn btn-primary" style="background-color: #fff; color:#bbb;font-weight:600; border-left: none;">POST</span>
                    </div>
                </form>
            </div>
        {% endif %}